<h1>
    
    Creación de Libros
</h1>
<br />

<form method="post" asp-action="GuardarLibro" asp-controller="createBook">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="form-group row mb-5">
                    <div class="col-sm-12">
                        <label>Nombre del libro</label>
                        <input name="nombre" class="form-control" />
                    </div>
                    <div class="col-sm-2">
                        <label>Descripción</label>
                    </div>
                    <div class="col-sm-12">
                        <textarea name="descripcion" class="form-control" placeholder="Ingrese la descripción"></textarea>
                    </div>
                </div>
                <div class="form-group row mb-5">
                    <div class="col">
                        <label>Precio</label>
                        <input name="precio" class="form-control" />
                    </div>
                    <div class="col">
                        <label>Autor</label>
                        @Html.DropDownList("autorId", ViewData["listaAutores"] as SelectList, "Seleccione un Autor", new { @class = "form-control" })
                    </div>
                    <div class="col">
                        <label>Categoría o Género</label>
                        @Html.DropDownList("categoriaId", ViewData["listaCategoria"] as SelectList, "Seleccione una categoría", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Seleccionar Imagen</h5>
                                    <div class="mb-3">
                                        <input type="file" id="inputImage" class="form-control" accept="image/*" onchange="previewImage(event)">
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-sm-12">
                                <input type="submit" class="btn btn-success" value="Guardar" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre de libro</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Autor</th>
                <th>Categoria</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var equipo in (IEnumerable<dynamic>) ViewData["ListadoLibros"])
            {
                <tr>
                    <td>@equipo.NombreLibro</td>
                    <td>@equipo.Descripcion</td>
                    <td>@equipo.Precio</td>
                    <td>@equipo.Autor</td>
                    <td>@equipo.Categoria</td>
                    <td><a class="btn btn-danger">Eliminar</a></td>
                </tr>
            }

        </tbody>
    </table>

</form>



